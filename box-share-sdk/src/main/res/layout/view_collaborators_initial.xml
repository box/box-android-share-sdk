<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/collaborator_initials_list_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/invite_collaborator_initials_list_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/box_sharesdk_collaborators_label"
        android:text="@string/box_sharedsdk_collaborators_title"
        android:layout_marginBottom="8dp"/>
    <ProgressBar
        android:id="@+id/box_sharesdk_activity_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/box_sharesdk_progressbar_size"
        android:maxHeight="@dimen/box_sharesdk_progressbar_size"
        android:minWidth="@dimen/box_sharesdk_progressbar_size"
        android:maxWidth="@dimen/box_sharesdk_progressbar_size"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/progress_animation"
        android:rotation="270"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_collaborators_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/box_sharesdk_no_collaborators_msg"
        android:text="@string/box_sharesdk_no_collaborators"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/invite_collaborator_initials_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
</LinearLayout>
