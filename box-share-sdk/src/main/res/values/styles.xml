<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ShareTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/box_sharesdk_background</item>
        <item name="colorPrimaryDark">@color/box_sharesdk_primary_dark</item>
        <item name="colorAccent">@color/box_sharesdk_accent</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ShareDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/box_sharesdk_background</item>
        <item name="colorPrimaryDark">@color/box_sharesdk_primary_dark</item>
        <item name="colorAccent">@color/box_sharesdk_accent</item>
        <item name="android:minWidth">@dimen/box_sharesdk_dialog_minWidth</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/box_ripple_btn</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#ff7c7c7c</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/box_sharesdk_horizontal_margin</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:scrollHorizontally">false</item>
    </style>
    <style name="RaisedButton"  parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/box_sharesdk_button_height</item>
        <item name="android:background">@drawable/box_ripple_raised_btn</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/box_sharesdk_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/box_sharesdk_horizontal_margin</item>
        <item name="android:textColor">@color/box_sharesdk_background</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <!--Since we changed gray color to white, gray buttons don't look good on phones older than v21
    Using default blue buttons for the same-->
    <style name="RaisedGrayButton"  parent="@style/RaisedButton">
    </style>

    <style name="BoxHeaderText"  parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/box_sharesdk_accent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/box_sharesdk_header_cell_height</item>
        <item name="android:layout_marginLeft">@dimen/box_sharesdk_horizontal_margin</item>
    </style>

    <style name="BoxLabelIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingRight">@dimen/box_sharesdk_horizontal_margin</item>
    </style>

    <style name="BoxBodyText"  parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/box_sharesdk_primary_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/box_sharesdk_vertical_margin</item>
    </style>

    <style name="BoxLabelText" parent="@style/BoxLabelTextNoPadding">
        <item name="android:paddingLeft">@dimen/box_sharesdk_vertical_margin</item>
    </style>

    <style name="BoxLabelTextNoPadding" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/box_sharesdk_primary_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/box_sharesdk_zero_margin</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="BoxHintText"  parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/box_sharesdk_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoxOptionsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/box_sharesdk_horizontal_margin</item>
    </style>

    <style name="BoxSwitch"  parent="@android:style/Widget.CompoundButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/box_sharesdk_header_cell_height</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:paddingLeft">@dimen/box_sharesdk_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/box_sharesdk_horizontal_margin</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
    </style>

    <style name="BoxDivider">
        <item name="android:layout_height">@dimen/box_sharesdk_horizontal_rule_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/box_sharesdk_divider</item>
    </style>

    <dimen name="box_sharesdk_dialog_minWidth">72dp</dimen>
</resources>